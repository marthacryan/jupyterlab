{
  "compilerOptions": {
    "target": "es2019",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "lib": ["ES2019", "DOM"],
    "module": "ESNEXT",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
